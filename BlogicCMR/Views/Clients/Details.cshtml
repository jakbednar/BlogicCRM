@model BlogicCMR.Models.Client

@{
    Layout = "_Layout";
    ViewData["Title"] = "Detail klienta";
}

<link rel="stylesheet" href="~/css/pages.css" asp-append-version="true" />

<div class="detail-container">
    <div class="detail-card">
        <div class="card-header">
            <h3>@Model.FirstName @Model.LastName</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Jméno</dt>
                <dd class="col-sm-9">@Model.FirstName</dd>

                <dt class="col-sm-3">Příjmení</dt>
                <dd class="col-sm-9">@Model.LastName</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Telefon</dt>
                <dd class="col-sm-9">@Model.Phone</dd>

                <dt class="col-sm-3">Rodné číslo</dt>
                <dd class="col-sm-9">@Model.PersonalIdNumber</dd>

                <dt class="col-sm-3">Věk</dt>
                <dd class="col-sm-9">@Model.Age</dd>
            </dl>
            <div class="detail-actions">
                <a href="javascript:history.back()" class="btn btn-outline-secondary">Zpět</a>
                <a asp-action="Edit" asp-route-id="@Model.ClientId" class="btn btn-primary">Upravit</a>
            </div>
        </div>
    </div>
</div>